<!DOCTYPE html>
<html>
  <%= render partial: 'layouts/partials/head' %>

  <body>
    <%= render partial: 'layouts/partials/header' %>
    <div class="wrapper">
      <div class="container">
        <div class="row">
          <nav class="columns small-12 medium-3 sidenav" id="sidenav" data-turbolinks-permanent>
            <%= directory %>
            <hr>
            <a class="subtle" href="/tutorials">Tutorials</a>
          </nav>
          <div class="columns small-12 medium-9" id="primary-content" data-turbolinks-permanent>
            <%= yield %>
            <%= render partial: 'layouts/partials/feedback' %>
          </div>
        </div>
      </div>
    </div>
    <%= render partial: 'layouts/partials/footer' %>
    <%= render partial: 'layouts/partials/notices' %>
  </body>
</html>
