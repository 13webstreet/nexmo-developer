<!DOCTYPE html>
<html>
  <%= render partial: 'layouts/partials/head' %>

  <body>
    <%= render partial: 'layouts/partials/header' %>
    <div class="wrapper">
      <div class="container">
        <div class="row">
          <nav class="columns small-12 medium-3 sidenav" id="sidenav" data-turbolinks-permanent>
            <%= navigation_from_content(content: @content, title: @title) %>
          </nav>
          <div class="columns small-12 medium-9" id="primary-content">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= render partial: 'layouts/partials/footer' %>
  </body>
</html>
